{
    "manifest_version": 2,
    "name": "Stretch-Break Reminder",
    "version": "1.0",

    "description": "Take a break, for your body's sake",

    "browser_action": {
        "default_icon": {
            "16": "img/extension_toolbar_icon16.png",
            "32": "img/extension_toolbar_icon32.png"
        },
        "default_popup": "popup.html",
        "default_title": "Stretch-Break Reminder: click for options"
    },
    "icons": {
        "16": "img/extension_icon16.png",
        "32": "img/extension_icon32.png",
        "48": "img/extension_icon48.png",
        "128": "img/extension_icon128.png"
    },
    "author": "Ningsong Shen",

    "background": {  
        "scripts": ["background.js"],
        "persistent": false
    },
    "options_page": "options.html",

    "permissions": ["notifications", "storage"]
}